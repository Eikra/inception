server {
    #SSL/TLS Configuration
    listen 443 ssl;
    # server_name login.42.fr;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_certificate CERT_HERE;
    ssl_certificate_key CERT_KEY_HERE;

    #root and index and server_name
    root /var/www/html;
    server_name localhost;
    index index.php index.html index.htm index.php index.nginx-debian.html;
    location / {
		try_files $uri $uri/ /index.php$is_args$args;
	}
    
    location ~ \.php$ {
		fastcgi_split_path_info ^(.+\.php)(/.+)$;
		fastcgi_pass wordpress:9000; #PHP for wordpress will listen on the port 9000
		fastcgi_index index.php;
		include fastcgi_params;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_param SCRIPT_NAME $fastcgi_script_name;
	}
}
